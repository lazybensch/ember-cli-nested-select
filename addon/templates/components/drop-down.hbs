{{#unless listVisible}}
  {{input value=selected.label readonly=true action='showList' on='focus-in' classNames='drop-down-text'}}
{{else}}
  {{input value=query action='quickSelect' on='insert-newline' classNames='keep-drop-down drop-down-text'}}
  <label class='preview drop-down-text'> {{preview}} </label>
{{/unless}}

{{#if (and selected showRevert)}}
  <i class='revert keep-drop-down drop-down-text' {{action 'revert'}}>{{fa-icon 'times'}}</i>
{{/if}}

<ol class='drop-down-list' hidden={{if listVisible false true}}>
  {{#each filteredContent as |entry|}}
    <li class='drop-down-text {{if entry.children 'keep-drop-down'}}' {{action 'select' entry on='click'}}>
      <label>
        {{entry.label}}
      </label>
      {{#if entry.children}}
        <i class='next fa fa-chevron-right'></i>
      {{/if}}
    </li>
  {{else}}
    <li>
      nothing found for '{{query}}'
    </li>
  {{/each}}
</ol>
